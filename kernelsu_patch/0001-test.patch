diff --git a/kernel/app_profile.c b/kernel/app_profile.c
index c7229860..8f98bd8f 100644
--- a/kernel/app_profile.c
+++ b/kernel/app_profile.c
@@ -127,19 +127,23 @@ void disable_seccomp(struct task_struct *tsk)
